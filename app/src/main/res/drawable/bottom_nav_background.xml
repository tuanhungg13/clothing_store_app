<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Viền trên màu đen -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/black" /> <!-- Màu viền trên -->
            <corners
                android:topLeftRadius="24dp"
                android:topRightRadius="16dp" /> <!-- Border radius cho viền trên -->
            <size android:height="2dp" /> <!-- Chiều cao của viền trên -->
        </shape>
    </item>

    <!-- Nền trắng với padding và border-radius cho nền -->
    <item
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"> <!-- Để viền trên không bị che -->
        <shape android:shape="rectangle">
            <solid android:color="@color/white" /> <!-- Nền trắng -->
            <padding
                android:left="16dp"
                android:right="16dp"
                android:top="8dp"
                android:bottom="8dp" /> <!-- Padding x và y -->
            <corners
                android:topLeftRadius="24dp"
                android:topRightRadius="16dp"
                android:bottomLeftRadius="0dp"
                android:bottomRightRadius="0dp" /> <!-- Border radius cho nền trắng -->
        </shape>
    </item>

</layer-list>
