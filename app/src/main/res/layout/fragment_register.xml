<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.fragment.auth.RegisterFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="26dp">

        <TextView
            android:id="@+id/txt_title_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Đăng ký"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="50dp"/>

        <EditText
            android:id="@+id/edit_register_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:layout_marginBottom="24dp"
            android:textSize="20sp"
            android:imeOptions="actionNext"
            android:hint="Nhập tên của bạn"/>

        <EditText
            android:id="@+id/edit_register_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:layout_marginBottom="24dp"
            android:textSize="20sp"
            android:imeOptions="actionNext"
            android:hint="Email"/>

        <EditText
            android:id="@+id/edit_register_phone_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:layout_marginBottom="24dp"
            android:textSize="20sp"
            android:imeOptions="actionNext"
            android:hint="Số điện thoại"/>

        <EditText
            android:id="@+id/edit_register_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:layout_marginBottom="24dp"
            android:textSize="20sp"
            android:imeOptions="actionNext"
            android:hint="Mật khẩu"/>

        <EditText
            android:id="@+id/edit_confirm_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:textSize="20sp"
            android:imeOptions="actionDone"
            android:hint="Xác nhận mật khẩu"/>

        <Button
            android:id="@+id/btn_register"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:backgroundTint="@color/black"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:padding="12dp"
            android:text="ĐĂNG KÝ" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:text="Đăng nhập với" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginTop="15dp">

            <ImageButton
                android:id="@+id/imb_login_google"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/td_rounded_button"
                android:src="@drawable/android_light_rd_na_1x"
                android:scaleType="fitCenter"
                android:contentDescription="Google"/>

            <ImageButton
                android:id="@+id/imb_login_fb"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="20dp"
                android:background="@drawable/td_rounded_button"
                android:src="@drawable/facebook_logo_primary"
                android:scaleType="fitCenter"
                android:contentDescription="FaceBook"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground"> <!-- Hiệu ứng khi bấm -->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="Bạn đã có tài khoản?" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_marginStart="8dp"
                android:text="Đăng nhập" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
