<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="8dp"
    app:cardElevation="4dp"
    app:cardCornerRadius="12dp"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- Phần văn bản -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/txt_message_BSTAll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bộ sưu tập mới"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/txt_title_BSTAll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đi chơi \nTiệc tùng"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:fontFamily="sans-serif-medium" />
        </LinearLayout>

        <!-- Hình ảnh -->
        <ImageView
            android:id="@+id/img_BST_All"
            android:layout_width="100dp"
            android:layout_height="130dp"
            android:layout_weight="0.5"
            android:scaleType="centerCrop"
            android:src="@drawable/mau1"
            android:background="@drawable/hvq_backgroud_circle"/> <!-- Sử dụng nền tròn -->
    </LinearLayout>
</androidx.cardview.widget.CardView>
