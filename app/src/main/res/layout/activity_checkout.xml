<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <!-- HEADER (KHÔNG CUỘN) -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@android:color/white"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/background_back_circle"
            android:src="@drawable/ic_back"
            android:layout_alignParentStart="true"
            android:contentDescription="Quay lại"
            android:padding="8dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thanh toán"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_centerInParent="true" />
    </RelativeLayout>

    <!-- SCROLLVIEW NỘI DUNG CUỘN -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/white"
        android:layout_weight="1">

    <LinearLayout
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Header -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thông tin thanh toán"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginBottom="16dp" />

        <!-- Thông tin người nhận -->
        <EditText
            android:id="@+id/edtCustomerName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Họ và tên"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/edtProvince"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tỉnh/Thành phố" />

        <EditText
            android:id="@+id/edtDistrict"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Quận/Huyện" />

        <EditText
            android:id="@+id/edtWard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Phường/Xã" />

        <EditText
            android:id="@+id/edtAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Địa chỉ cụ thể" />

        <EditText
            android:id="@+id/edtPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Số điện thoại"
            android:inputType="phone" />

        <!-- Sản phẩm -->
        <TextView
            android:text="Sản phẩm"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvOrderItems"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:nestedScrollingEnabled="false"
            android:overScrollMode="never" />

        <!-- Vận chuyển -->
        <TextView
            android:text="Phương thức vận chuyển"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <RadioGroup
            android:id="@+id/rgShipping"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/rbStandardShipping"
                android:text="$3.90  Giao hàng nhanh (2-6 ngày)"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <RadioButton
                android:id="@+id/rbExpressShipping"
                android:text="$9.90  Giao hàng hỏa tốc (2-10h)"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </RadioGroup>

        <!-- Mã giảm giá -->
        <TextView
            android:text="Mã giảm giá"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/edtCoupon"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="Nhập mã tại đây..." />

            <Button
                android:id="@+id/btnApplyCoupon"
                android:text="Xác nhận"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <!-- Phương thức thanh toán -->
        <TextView
            android:text="Phương thức thanh toán"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <RadioGroup
            android:id="@+id/rgPayment"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/rbCOD"
                android:text="Thanh toán khi nhận hàng"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <RadioButton
                android:id="@+id/rbBankTransfer"
                android:text="Thanh toán bằng ngân hàng"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </RadioGroup>

        <!-- Tổng kết đơn hàng -->
        <LinearLayout
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Giá sản phẩm: $110"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:text="Phí vận chuyển: FreeShip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:text="Tổng tiền: $110"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <Button
            android:id="@+id/btnCheckout"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thanh toán" />
    </LinearLayout>
</ScrollView>
</LinearLayout>
